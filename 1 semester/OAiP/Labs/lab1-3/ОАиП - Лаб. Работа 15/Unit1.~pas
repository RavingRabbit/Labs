{$R *.dfm}

procedure TForm1.Button2Click(Sender: TObject);
var x:integer;
begin
  x:=StrToInt(LabeledEdit1.Text);
  Stak.Adds(x);
  Memo1.Lines.Add(LabeledEdit1.Text);
  LabeledEdit1.Clear;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  Memo1.Clear;
  Stak:=TStak.Create;
end;

