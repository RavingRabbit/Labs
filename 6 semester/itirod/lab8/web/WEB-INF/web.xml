<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>ClientListServlet</servlet-name>
        <servlet-class>com.ravingdev.itirod.lab8.servlets.ClientListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewClientServlet</servlet-name>
        <servlet-class>com.ravingdev.itirod.lab8.servlets.NewClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteClientServlet</servlet-name>
        <servlet-class>com.ravingdev.itirod.lab8.servlets.DeleteClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditClientServlet</servlet-name>
        <servlet-class>com.ravingdev.itirod.lab8.servlets.EditClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientListServlet</servlet-name>
        <url-pattern>/clients</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewClientServlet</servlet-name>
        <url-pattern>/client/new</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteClientServlet</servlet-name>
        <url-pattern>/client/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditClientServlet</servlet-name>
        <url-pattern>/client/edit</url-pattern>
    </servlet-mapping>
</web-app>
